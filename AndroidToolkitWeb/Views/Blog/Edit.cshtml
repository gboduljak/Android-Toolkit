                                    @Html.TextBoxFor(m => m.Img3, new { @class = "input-large" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <h2>@Html.LabelFor(m => m.Tags)</h2>
                        <div class="alert alert-info">
                            <h3>NOTE</h3>
                            <p>Separate tags with ','</p>
                        </div>
                        <div>
                            @Html.TextBoxFor(m => m.Tags, new { @class = "input-xxlarge" })
                        </div>
                    </div>

                    <div>
                        <input type="submit" value="Save" class="btn btn-large" />
