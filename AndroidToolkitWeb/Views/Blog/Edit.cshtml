<div class="container-fluid">

    <div class="row-fluid">
        <div class="span3">
            <div class="icon-pen icon-128 slideLeft"></div>
        </div>
        <div class="span9">
            <form class="form-horizontal" role="form" action="~/Blog/Post/Edit/@Model.ID/@Model.Name" method="post">
                <div class="control-group">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m=>m.ID)
                    @Html.HiddenFor(m=>m.Date)
                    @Html.HiddenFor(m=>m.Author)
                    <h1>Create a new blog post.</h1>
                    <hr />
                    @Html.ValidationSummary()
                    <div class="form-group">
                        <h2>@Html.LabelFor(m => m.Name)</h2>
                        <div>
                            @Html.TextBoxFor(m => m.Name, new { @class = "input-xxlarge" })
                        </div>
                    </div>
                    <div class="form-group">
                        <h2>@Html.LabelFor(m => m.Description)</h2>
                        <blockquote>
                            Post description
                        </blockquote>
                        <div>
                            @Html.TextAreaFor(m => m.Description)
                        </div>
                    </div>
                    <div class="form-group">
                        <h2>@Html.LabelFor(m => m.Post)</h2>
                        <blockquote>
                            Post content
                        </blockquote>
                        <div>
                            @Html.TextAreaFor(m => m.Post)
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span4">
                            <div class="form-group">
